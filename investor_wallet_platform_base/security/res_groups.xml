<odoo>
	<record id="group_platform_wallet_user" model="res.groups">
        <field name="name">Wallet Platform User</field>
    	<field name="category_id" ref="easy_my_coop.module_category_cooperator_management"/>
        <field name="implied_ids" eval="[(6, 0, [ref('easy_my_coop.group_easy_my_coop_manager')])]"/>
        <field name="comment">Administrateur d'une structure de la plateforme</field>
    </record>

    <record id="group_platform_wallet_manager" model="res.groups">
        <field name="name">Wallet Platform Manager</field>
        <field name="category_id" ref="easy_my_coop.module_category_cooperator_management"/>
        <field name="implied_ids" eval="[(4, ref('group_platform_wallet_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="comment">Administrateur de la plateforme Financit√©</field>
    </record>

    <record id="group_platform_api_access" model="res.groups">
        <field name="name">Allow Access to API page</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>
</odoo>
